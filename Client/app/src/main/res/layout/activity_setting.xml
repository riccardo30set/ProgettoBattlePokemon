<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#A5A5A5"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="645dp"
        android:fontFamily="@font/pokemon_pixel_font"
        android:text="Profilo allenatore"
        android:textAlignment="center"
        android:textSize="48sp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navbarPok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="29dp"
        android:background="@navigation/round_corner"
        android:elevation="2dp"
        app:itemIconSize="25dp"
        app:itemIconTint="@navigation/item_selector"
        app:itemRippleColor="@android:color/transparent"
        app:itemTextColor="#000000"
        app:menu="@menu/bottom_navmenu" />

    <ImageView
        android:id="@+id/accountImgView"
        android:layout_width="272dp"
        android:layout_height="202dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="72dp"
        android:layout_marginTop="103dp"
        android:layout_marginEnd="67dp"
        android:layout_marginBottom="426dp"
        app:srcCompat="@drawable/accountimage" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="275dp"
        android:layout_marginBottom="348dp"
        android:text="Nome allenatore :" />

    <EditText
        android:id="@+id/accountNameInput"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="169dp"
        android:layout_marginTop="359dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="321dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />


</RelativeLayout>

